<%= form_with(model: [ @restaurant, @restaurant.reviews.build ], local: true) do |form| %>
  <p>
    <%= form.label :rating %><br>
    <%= form.select :rating, (1..5) %>
  </p>
  <p>
    <%= form.label :comment %><br>
    <%= form.text_area :body %>
    <%= form.hidden_field :restaurant_id, :value => @review.restaurant_id %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
